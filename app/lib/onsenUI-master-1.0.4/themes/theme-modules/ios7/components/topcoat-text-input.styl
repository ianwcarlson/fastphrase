@import '../../common/topdoc-text-input'
@require '../../common/input'

.topcoat-text-input
  @extend .input
  letter-spacing var-letter-spacing
  border var-border--text-input
  border-radius var-border-radius
  background-color var-background-color--text-input
  box-shadow var-box-shadow--text-input
  color var-color
  color var-color--text-input
  padding 4px 8px
  font-size var-font-size--text-input
  height var-height--text-input
  vertical-align middle
  font-weight var-font-weight

.topcoat-text-input:disabled
  @extend .input:disabled

.topcoat-text-input:disabled::-webkit-input-placeholder
  color var-color--focus

.topcoat-text-input:disabled::-moz-placeholder
  color var-color--focus

.topcoat-text-input:disabled:-ms-input-placeholder
  color var-color--focus

.topcoat-text-input:invalid
  border var-border--invalid
  color var-color-invalid

/* Text Input(transparent) */

.topcoat-text-input--transparent
  @extend .topcoat-text-input
  border none
  background-color transparent
  padding-left 0
  padding-right 0

.topcoat-text-input--transparent:disabled
  @extend .topcoat-text-input:disabled
  border none
  background-color transparent

.topcoat-text-input--transparent:disabled::-webkit-input-placeholder
  @extend .topcoat-text-input:disabled::-webkit-input-placeholder
  border none
  background-color transparent

.topcoat-text-input--transparent:disabled::-moz-placeholder
  @extend .topcoat-text-input:disabled::-moz-placeholder
  border none
  background-color transparent

.topcoat-text-input--transparent:disabled:-ms-input-placeholder
  @extend .topcoat-text-input:disabled:-ms-input-placeholder
  border none
  background-color transparent

.topcoat-text-input--transparent:invalid
  @extend .topcoat-text-input:invalid
  border none
  background-color transparent

/* Text Input(underbar) */

.topcoat-text-input--underbar
  @extend .topcoat-text-input
  border none
  background-color transparent
  border-bottom 1px solid var-border-color--text-input
  border-radius 0px

.topcoat-text-input--underbar:disabled
  @extend .topcoat-text-input:disabled
  border none
  background-color transparent
  border-bottom 1px solid var-border-color--text-input

.topcoat-text-input--underbar:disabled::-webkit-input-placeholder
  @extend .topcoat-text-input:disabled::-webkit-input-placeholder
  border none
  background-color transparent

.topcoat-text-input--underbar:disabled::-moz-placeholder
  @extend .topcoat-text-input:disabled::-moz-placeholder
  border none
  background-color transparent

.topcoat-text-input--underbar:disabled:-ms-input-placeholder
  @extend .topcoat-text-input:disabled:-ms-input-placeholder
  border none
  background-color transparent

.topcoat-text-input--underbar:invalid
  @extend .topcoat-text-input:invalid
  border none
  background-color transparent
  border-bottom 1px solid var-color-invalid

