@import '../../common/topdoc-range'
@require '../../common/range'

.topcoat-range
  @extend .range
  border-radius var-border-radius
  border var-border--range
  height var-height--range__track
  border-radius var-border-radius--large
  border-radius var-border-radius--range

  background-image linear-gradient(var-background-color--range-background, var-background-color--range-background)
  background-position left center
  background-size 100% 2px
  background-repeat no-repeat
  overflow hidden
  height 31px

.topcoat-range::-moz-range-track
  position relative
  border-radius var-border-radius
  border none
  background-color var-background-color--input
  background-color var-background-color--range-background
  height var-height--range__track
  border-radius var-border-radius--large
  border-radius var-border-radius--none
  top 0
  margin 0
  padding 0

.topcoat-range::-webkit-slider-thumb
  @extend .range__thumb--webkit
  position relative
  height var-width--range__thumb
  width var-width--range__thumb
  background-color var-background-color
  background-color var-background-color--range__thumb
  border var-border
  border var-range-border
  border-radius var-border-radius
  border-radius var-round-border
  box-shadow var-box-shadow
  top 0
  margin 0
  padding 0

.topcoat-range::-moz-range-thumb
  @extend .range__thumb
  position relative
  height var-width--range__thumb
  width var-width--range__thumb
  background-color var-background-color
  border var-border
  border var-range-border
  border-radius var-border-radius
  border-radius var-round-border
  box-shadow var-box-shadow
  margin 0
  padding 0

.topcoat-range::-webkit-slider-thumb:before
  position absolute
  top 13px
  right 0px
  left -1024px
  width 1024px
  height 2px
  background-color var-background-color--range
  content ''
  margin 0
  padding 0

.topcoat-range:disabled
  @extend .range:disabled

