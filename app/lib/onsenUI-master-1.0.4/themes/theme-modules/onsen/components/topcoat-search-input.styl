@import '../../common/topdoc-search-input'
@require '../../common/search-input'

.topcoat-search-input
  @extend .search-input
  line-height var-height
  height var-height
  font-size var-font-size
  border var-border
  border var-border--search-input
  background-color var-background-color--text-input
  background-color var-background-color--search-input
  box-shadow var-box-shadow--text-input
  color var-color
  color var-color--search-input
  padding var-padding--search-input
  border-radius var-border-radius--large
  border-radius var-search-input--border-radius
  background-image var-background-image--search-input
  background-position 16px center
  background-position var-background-position--search-input
  background-repeat no-repeat
  background-size var-font-size

.topcoat-search-input:focus
  background-color var-background-color--text-input--focus
  background-color var-background-color--search-input--focus
  color var-color--focus
  color var-color--search-input--focus
  border var-border--focus
  border var-border--search-input--focus
  box-shadow var-box-shadow--text-input, var-box-shadow--focus

.topcoat-search-input::-webkit-search-cancel-button,
.topcoat-search-input::-webkit-search-decoration
  margin-right 5px
  margin-right var-margin-right--search-decoration

.topcoat-search-input:focus::-webkit-input-placeholder,
.topcoat-search-input:focus::-webkit-input-placeholder
  color var-placeholder-color--input

.topcoat-search-input:disabled
  @extend .search-input:disabled

.topcoat-search-input:disabled::-webkit-input-placeholder
  color var-color--focus

.topcoat-search-input:disabled::-moz-placeholder
  color var-color--focus

.topcoat-search-input:disabled:-ms-input-placeholder
  color var-color--focus

